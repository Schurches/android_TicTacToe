<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Cuando se interactua con el boton -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/onColor1"
                android:endColor="@color/onColor2"
                android:angle="270">
            </gradient>
            <corners
                android:radius="@dimen/paddingB">
            </corners>
            <stroke
                android:width="1dp">
            </stroke>
        </shape>
    </item>

    <!-- Este estado es para cuando no se interactue con el boton-->
    <item>
        <shape>
            <gradient
                android:startColor="@color/offColor1"
                android:endColor="@color/offColor2"
                android:angle="270">
            </gradient>
            <corners
                android:radius="@dimen/paddingB">
            </corners>
            <stroke
                android:width="1dp">
            </stroke>
        </shape>
    </item>

</selector>